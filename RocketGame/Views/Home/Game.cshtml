	</div>
</div>

<script>

	setInterval(metod, 7000);

	function metod() {
		$.ajax({
			type: "GET",
			url: "/Game/Stats",

			success: function (result) {

				for (var i = 0; i < @ViewBag.i ; i++) {
					$("#0-" + i).empty();
					$("#0-" + i).append(result[i][0]);
					$("#1-" + i).empty();
					$("#1-" + i).append(result[i][1]);
				}

			}
		});

		$.ajax({
			type: "GET",
			url: "/Tick/GetTick",
			data: {type: 0},

			success: function (result) {

				if (result != "") {
					$("#content").empty();
					$("#content").append(result);
				}
			}
		});
	}
</script>

