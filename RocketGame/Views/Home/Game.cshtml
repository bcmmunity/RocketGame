<div id="modal">

</div>

<div class="modal-overlay" id="modal-overlay"></div>

<script type="text/javascript">
	var move = "s";
	var choose = "s";
	var opt = "";
	var team = "0";
	var checkk = true;
	var table = true;
	var isfin = true;

	var proces = true;
	$('#modal').hide();
	$('#modal-overlay').hide();
	$('#kk').hide();
	$("#moves").hide();
	$("#teams").hide();
	$("#msg").empty();
	$("#msg").append("Игра еще не началась");

	setInterval(check, 7000);

	var chk = true;

	function check() {
		$.ajax({
			type: "GET",
			url: "/Game/TimeCheck",

			success: function (result) {
			}
		});

		$.ajax({
			type: "GET",
			url: "/Game/LastTickCheck",

			success: function (result) {
				if (result && chk) {
					$("#warning").append("ПОСЛЕДНИЙ ТАКТ");
					chk = false;
				}
			}
		});

		$.ajax({
			type: "GET",
			url: "/Game/KeyCheck",
			data: { Key: @ViewBag.key },

			success: function (result) {
				if (result) {

					if (!checkk) {
						return;
					}

					$.ajax({
						type: "GET",
						url: "/Game/RocketCheck",
						data: { Key: @ViewBag.key },

						success: function (result) {
							if (result) {
								$("#getinrocket").show();
							}
							else {
								$("#getinrocket").hide();
							}
						}
					});

					$.ajax({
						type: "GET",
						url: "/Game/MoveCheck",
						data: { Key: @ViewBag.key },

						success: function (result) {
							if (result == "Ход не сделан") {

								if (table) {
									metod();
								}


								$("#msg").hide();
								$("#teams").hide();
								$("#moves").show();

								table = false;
							}
							else if (result == "Выжившие улетели!" || result == "Все погибли!") {
								$.ajax({
									type: "GET",
									url: "/Game/GameResult",

									success: function (result1) {
										if (result1 != "NotFinished" && isfin) {
											alert(result1);

											table = true;

											$("#msg").empty();
											$("#msg").append(result1);
											$("#msg").show();
											$("#teams").hide();
											$("#moves").hide();
											isfin = false;
										}
									}
								});
							}
							else {
								table = true;
								$("#msg").empty();
								$("#msg").append(result);
								$("#msg").show();
								$("#teams").hide();
								$("#moves").hide();
							}
						}
					});
				}
				else {
					$("#teams").hide();
					$("#moves").hide();
					$("#msg").empty();
					$("#msg").show();
					$("#msg").append("Неверный ключ");
				}
			}
		});
	}

	function selectTeam() {
		$.ajax({
			type: "GET",
			url: "/Game/TeamList",
			data: { Key: @ViewBag.key },

			success: function (result) {
				checkk = false;
				$("#moves").hide();
				$("#msg").hide();

				$("#teams").empty();
				$("#teams").show();
				//$("#teams").append(result);

				//alert(result[1].teamId);

				var i = 0;
				for (var item in result) {
					$("#teams").append("<span class='btn' onclick=\"team = " + result[i].teamId + "; checkk = true;choose += '" + result[i].name + "'; Confirme()\">" + result[i].name + "</span></br></br>");
					i++;
				}
				$("#teams").append("<span class='btn' onclick='checkk = true;$(\"#moves\").show();$(\"#teams\").hide();'>Отменить</span></br></br>");
			}
		});
	}

	function makeMove() {
		$.ajax({
			type: "GET",
			url: "/Game/Make",
			data: { Type: move, Key: @ViewBag.key, TeamId: team },

			success: function (result) {

				$("#moves").hide();
				$("#teams").hide();

				$("#msg").empty();
				$("#msg").show();
				$("#msg").append(result);
			}
		});
	}

	function Confirme() {
		checkk = false;
		$("#moves").hide();
		$("#teams").empty();
		$("#teams").show();
		$("#modal").empty();
		$("#modal").show();

		$("#modal-overlay").show();
		$("#modal").append("Ваше действие: " + choose + "<br>")
		$("#modal").append("<a><span class='btnn' onclick='checkk = true;$(\"#moves\").show();$(\"#teams\").hide();$(\"#modal\").hide();$(\"#modal-overlay\").hide();' style='background-color: red'>Отменить</span></a>");
		$("#modal").append("<a><span class='btnn' onclick='checkk = true;makeMove();$(\"#teams\").hide();$(\"#modal\").hide();$(\"#modal-overlay\").hide();' style='background-color: green'>Подтвердить</span></a></br></br>");
	}

		$.ajax({
			type: "GET",
			url: "/Game/KeyCheck",
			data: { Key: @ViewBag.key },

			success: function (result) {
				if (result) {

					if (!checkk) {
						$("#kk").hide();

						$("#kp").show();
						$("#k1").show();
						$("#k2").show();
						$('#k').show();
						return;
					}
					$("#kk").show();

					$("#kp").hide();
					$("#k1").hide();
					$("#k2").hide();
					$('#k').hide();

					$.ajax({
						type: "GET",
						url: "/Game/RocketCheck",
						data: { Key: @ViewBag.key },

						success: function (result) {
							if (result) {
								$("#getinrocket").show();
							}
							else {
								$("#getinrocket").hide();
							}
						}
					});

					$.ajax({
						type: "GET",
						url: "/Game/MoveCheck",
						data: { Key: @ViewBag.key },

						success: function (result) {
							if (result == "Ход не сделан") {

								if (table) {
									metod();
								}


								$("#msg").hide();
								$("#teams").hide();
								$("#moves").show();

								table = false;
							}
							else {
								table = true;
								$("#msg").empty();
								$("#msg").append(result);
								$("#msg").show();
								$("#teams").hide();
								$("#moves").hide();
							}
						}
					});
				}
				else {
					$("#teams").hide();
					$("#moves").hide();
					$("#msg").empty();
					$("#msg").show();
					$("#msg").append("Неверный ключ");
				}
			}
	});

</script>

