			{
				<tr>
					<th id="0-@i">
						@ViewBag.users[i, 0]
					</th>
					<th>
						@ViewBag.users[i, 2]
					</th>
					<th id="1-@i">
						@ViewBag.users[i, 3]
					</th>
				</tr>
			}
		</tbody>
	</table>

