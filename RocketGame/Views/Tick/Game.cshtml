
@{
	ViewData["Title"] = "Game";
	ViewBag.number = 0;
	//Layout = null;
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>

<h3>
	<span id="Promo">Код-приглашение: @ViewBag.Promo | Адрес страницы регистрации: @ViewBag.Link</span>
	<span id="time"></span>
	<span id="timeE"></span>
</h3>
<span id="li"></span>
<h3 id="msg"></h3>

<div id="content">
	<table class="card" id="table2" style="background-color: darkgray">
		<thead>
			<tr>
				<th> Ком(Т) </th>
				<th> Ник </th>
				<th> С/И </th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < ViewBag.i; i++)
			{
				<tr>
					<th id="0-@i">
						@ViewBag.users[i, 0]
					</th>
					<th>
						@ViewBag.users[i, 2]
					</th>
					<th id="1-@i">
						@ViewBag.users[i, 3]
					</th>
				</tr>
			}
		</tbody>
	</table>
</div>

<script>

	var totalE = Math.floor(@ViewBag.timeE);

	var total = 60 * @ViewBag.time - Math.floor(@ViewBag.timedif);

	setInterval(check, 5000);

	var ispause = false;
    var isfin = true;
    var isstarted = false;

	function check() {
		$.ajax({
			type: "GET",
			url: "/Game/PauseCheck",

			success: function (result) {

				if (result) {
					$("#timeE").empty();
					$("#time").empty();
					$("#msg").empty();
					$("#msg").append("Пауза");
					ispause = true;
				}
				else {
					if (ispause)
						$("#msg").empty();
					ispause = false;
				}
			}
		});
	}

	updateTime();

	function updateTime() {

        if (!isfin || !isstarted || ispause) {
			$("#timeE").empty();
			$("#time").empty();
			setTimeout(updateTime, 1000);
			return;
		}

		if (total != 0) {
			total -= 1;

            if (total > 0) {
                $("#time").empty();
                if (total % 60 > 9)
                    $("#time").append("| До конца такта: " + Math.floor(total / 60) + ":" + total % 60);
                else
                    $("#time").append("| До конца такта: " + Math.floor(total / 60) + ":0" + total % 60);
            }
            else {
                $("#time").empty();
                $("#time").append("| До конца такта: 00:00");
            }
		}
		else {
			total = 60 * @ViewBag.time;

            if (total > 0) {
                $("#time").empty();
                if (total % 60 > 9)
                    $("#time").append("| До конца такта: " + Math.floor(total / 60) + ":" + total % 60);
                else
                    $("#time").append("| До конца такта: " + Math.floor(total / 60) + ":0" + total % 60);
            }
            else {
                $("#time").empty();
                $("#time").append("| До конца такта: 00:00");
            }
		}

		if (totalE != 0) {
			totalE -= 1;

            if (totalE > 0) {
                $("#timeE").empty();
                if (totalE % 60 > 9)
                    $("#timeE").append("| До конца игры: " + Math.floor(totalE / 60) + ":" + totalE % 60);
                else
                    $("#timeE").append("| До конца игры: " + Math.floor(totalE / 60) + ":0" + totalE % 60);
            }
            else {
                $("#timeE").empty();
                $("#timeE").append("| До конца игры: 00:00");
            }
		}
		else {
			totalE = Math.floor(@ViewBag.timeE);

            if (totalE > 0) {
                $("#timeE").empty();
                if (totalE % 60 > 9)
                    $("#timeE").append("| До конца игры: " + Math.floor(totalE / 60) + ":" + totalE % 60);
                else
                    $("#timeE").append("| До конца игры: " + Math.floor(totalE / 60) + ":0" + totalE % 60);
            }
            else {
                $("#timeE").empty();
                $("#timeE").append("| До конца игры: 00:00");
            }
		}
		if (totalE < 0) {
			$.ajax({
				type: "GET",
				url: "/Game/GameResult",

				success: function (result) {

					if (result != "NotFinished") {

						if (isfin) {
							$("#msg").empty();
							$("#msg").append(result);
							isfin = false;
							$("#time").empty();
							$("#timeE").empty();
						}
					}
				}
			});
		}

		setTimeout(updateTime, 1000);
	}

	setInterval(metod, 5000);

	function metod() {

		$("#head").hide();
		$("#foo").hide();

		$.ajax({
			type: "GET",
			url: "/Game/GameResult",

			success: function (result) {

				if (result != "NotFinished") {

					if (isfin) {
						$("#msg").empty();
						$("#msg").append(result);
						isfin = false;
						$("#time").empty();
						$("#timeE").empty();
					}
				}
			}
		});

		//$.ajax({
		//	type: "GET",
		//	url: "/Game/Stats",

		//	success: function (result) {
				//
		//		for (var i = 0; i < @ViewBag.i ; i++) {
		//			$("#0-" + i).empty();
		//			$("#0-" + i).append(result[i][0]);
		//			$("#1-" + i).empty();
		//			$("#1-" + i).append(result[i][1]);
		//		}
		//
		//	}
		//});

		$.ajax({
			type: "GET",
			url: "/Tick/GetTick",
			data: { type: 1 },

			success: function (result) {

				if (result != "") {
					$("#li").empty();
					$("#li").append("Адрес страницы регистрации: @ViewBag.Link");
					$("#Promo").empty();
					$("#content").empty();
                    $("#content").append(result);
                    isstarted = true;
				}
				else {
					$("#time").empty();
					$("#timeE").empty();
				}
			}
		});
		//$("#table2").width = $("#table1").width;
	}



	$("#head").hide();
	$("#foo").hide();
</script>

<style>
	html,
	body {
		width: 100%;
		height: 100%;
	}

	.card {
		white-space: nowrap;
		min-width: 20px;
	}

	#head {
		display: none;
	}

	#content {
		background-color: #fff;
		min-height: 200px;
		min-width: 500%;
		position: absolute;
		left: 0;
	}

	table {
		float: left;
	}

	.ft {
		background-color: darkgray;
		border: solid 1px;
	}

	tr {
		height: 30px;
		border-bottom: solid 1px;
		border-top: solid 1px;
	}

	th {
		min-width: 20px;
		border-left: solid 1px;
		border-right: solid 1px;
		text-align: center;
	}
</style>

