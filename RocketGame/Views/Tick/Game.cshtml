
@{
	ViewData["Title"] = "Game";
	ViewBag.number = 0;
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>

<h3>Код для входа в игру - @ViewBag.Promo</h3>

<div id="content">
	<table class="card" id="table2" style="background-color: darkgray">
		<thead>
			<tr>
				<th> Ком(Т) </th>
				<th> Ник </th>
				<th> С/И </th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < ViewBag.i; i++)
			{
				<tr>
					<th id="0-@i">
						@ViewBag.users[i, 0]
					</th>
					<th>
						@ViewBag.users[i, 2]
					</th>
					<th id="1-@i">
						@ViewBag.users[i, 3]
					</th>
				</tr>
			}
		</tbody>
	</table>
</div>

