
@{
	ViewData["Title"] = "Game";
	ViewBag.number = 0;
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>

<div id="content">
</div>

<script>
	var number = 1;

	setInterval(metod, 1000);

	function metod() {
		$.ajax({
			type: "GET",
			url: "/Game/Stats",

			success: function (result) {

				for (var i = 0; i < @ViewBag.i ; i++) {
					$("#1-" + i).empty();
					$("#1-" + i).append(result[i][0]);
					$("#2-" + i).empty();
					$("#2-" + i).append(result[i][1]);
				}

			}
		});

		$.ajax({
			type: "GET",
			url: "/Tick/GetTick",
			data: { number: number },

			success: function (result) {

				if (result != "") {
					$("#content").append(result);
					number++;
				}
			}
		});
	}
</script>

<style>
	html,
	body {
		width: 100%;
		height: 100%;
	}

	body {
		margin: 0;
		display: flex;
		justify-content: center;
	}

	.card {
		margin: 5px;
	}

	#content {
		background-color: #fff;
		min-height: 200px;
		max-width: 100%;
		display: flex;
		overflow-x: auto;
	}

	.ft {
		background-color: darkgray;
		border: solid 1px;
	}

	tr {
		height: 30px;
		border-bottom: solid 1px;
	}

	th {
	}
</style>

<link href="~/css/site.css" rel="stylesheet">

